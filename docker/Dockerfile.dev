# ---------- Development Image ----------
FROM python:3.11-slim

# Full dev tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    git \
    curl \
    build-essential \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Install Poetry + dev dependencies
COPY pyproject.toml poetry.lock ./
RUN pip install --no-cache-dir poetry && \
    poetry config virtualenvs.create false

# Install everything (including dev, test, jupyter)
COPY pyproject.toml poetry.lock ./
RUN poetry install --with dev,test,jupyter --no-interaction --no-ansi

# JupyterLab on 8888, MLflow UI on 5000
EXPOSE 8888 5000

# Create non-root user (required by VS Code Dev Containers)
ARG USERNAME=ds
ARG USER_UID=1000
RUN useradd -u $USER_UID -m $USERNAME
USER $USERNAME

CMD ["jupyter", "lab", "--ip=0.0.0.0", "--no-browser", "--allow-root"]
